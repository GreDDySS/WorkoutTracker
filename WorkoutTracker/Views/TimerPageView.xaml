<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WorkoutTracker.ViewModels"
             x:Class="WorkoutTracker.Views.TimerPageView"
             x:DataType="vm:TimerViewModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource BackgroundPrimary}">
    <Grid RowDefinitions="Auto, *, Auto" Padding="24">

        <Grid Grid.Row="0" ColumnDefinitions="Auto, *, Auto">
            <Button Grid.Column="0" Command="{Binding CloseCommand}" Style="{StaticResource ButtonClose}"/>

            <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center" Spacing="0">
                <Label Text="ПРОГРЕСС" Style="{StaticResource LabelCaption}" HorizontalOptions="Center" FontSize="10"/>
                <Label Text="{Binding WorkoutProgress}" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource TextPrimary}" HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <Border Grid.Column="2" BackgroundColor="{StaticResource BackgroundCard}" StrokeShape="RoundRectangle 12" Padding="10,5">
                <Label Text="{Binding RemainingTime}" TextColor="{StaticResource AccentMain}" FontAttributes="Bold" FontSize="14"/>
            </Border>
        </Grid>

        <Grid Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center">

            <Ellipse WidthRequest="280" HeightRequest="280" Opacity="0.1">
                <Ellipse.Triggers>
                    <DataTrigger TargetType="Ellipse" Binding="{Binding IsWorkPhase}" Value="True">
                        <Setter Property="Fill" Value="{StaticResource AccentWork}"/>
                    </DataTrigger>
                    <DataTrigger TargetType="Ellipse" Binding="{Binding IsWorkPhase}" Value="False">
                        <Setter Property="Fill" Value="{StaticResource AccentRest}"/>
                    </DataTrigger>
                </Ellipse.Triggers>
            </Ellipse>

            <Ellipse WidthRequest="300" HeightRequest="300" 
                     Stroke="{StaticResource BackgroundInput}" StrokeThickness="10"/>

            <Ellipse WidthRequest="300" HeightRequest="300" 
                     StrokeThickness="10" StrokeLineCap="Round">
                <Ellipse.Triggers>
                    <DataTrigger TargetType="Ellipse" Binding="{Binding IsWorkPhase}" Value="True">
                        <Setter Property="Stroke" Value="{StaticResource AccentWork}"/>
                    </DataTrigger>
                    <DataTrigger TargetType="Ellipse" Binding="{Binding IsWorkPhase}" Value="False">
                        <Setter Property="Stroke" Value="{StaticResource AccentRest}"/>
                    </DataTrigger>
                </Ellipse.Triggers>
            </Ellipse>

            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="5">
                <Border Padding="12,6" BackgroundColor="{StaticResource BackgroundSecondary}" StrokeShape="RoundRectangle 12" HorizontalOptions="Center">
                    <Label Text="{Binding IsWorkPhase}" 
                           FontSize="12" FontAttributes="Bold" CharacterSpacing="2" TextTransform="Uppercase">
                        <Label.Triggers>
                            <DataTrigger TargetType="Label" Binding="{Binding IsWorkPhase}" Value="True">
                                <Setter Property="TextColor" Value="{StaticResource AccentWork}"/>
                                <Setter Property="Text" Value="РАБОТА"/>
                            </DataTrigger>
                            <DataTrigger TargetType="Label" Binding="{Binding IsWorkPhase}" Value="False">
                                <Setter Property="TextColor" Value="{StaticResource AccentRest}"/>
                                <Setter Property="Text" Value="ОТДЫХ"/>
                            </DataTrigger>
                        </Label.Triggers>
                    </Label>
                </Border>

                <Label Text="{Binding CurrentTime}" 
                       Style="{StaticResource LabelHero}" 
                       FontSize="80"
                       FontFamily="Monospace"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Grid>

        <Grid Grid.Row="2" ColumnDefinitions="Auto, *, Auto" Margin="0,0,0,20">

            <Button Grid.Column="0" Command="{Binding PreviousCommand}" Text="❮"
                    BackgroundColor="{StaticResource BackgroundCard}" TextColor="{StaticResource TextSecondary}"
                    WidthRequest="60" HeightRequest="60" CornerRadius="24"/>

            <Button Grid.Column="1" 
                    Command="{Binding PauseCommand}"
                    Text="{Binding PauseButtonFullText}"
                    CornerRadius="30"
                    HeightRequest="75"
                    Margin="20,0"
                    FontSize="18" FontAttributes="Bold"
                    Shadow="{Null}">
                <Button.Triggers>
                    <DataTrigger TargetType="Button" Binding="{Binding IsWorkPhase}" Value="True">
                        <Setter Property="Background" Value="{StaticResource GradientWork}"/>
                        <Setter Property="TextColor" Value="#0F1115"/>
                    </DataTrigger>
                    <DataTrigger TargetType="Button" Binding="{Binding IsWorkPhase}" Value="False">
                        <Setter Property="Background" Value="{StaticResource GradientRest}"/>
                        <Setter Property="TextColor" Value="#0F1115"/>
                    </DataTrigger>
                </Button.Triggers>
            </Button>

            <Button Grid.Column="2" Command="{Binding NextCommand}" Text="❯"
                    BackgroundColor="{StaticResource BackgroundCard}" TextColor="{StaticResource TextSecondary}"
                    WidthRequest="60" HeightRequest="60" CornerRadius="24"/>
        </Grid>
    </Grid>
</ContentPage>