<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WorkoutTracker.ViewModels"
             xmlns:models="clr-namespace:WorkoutTracker.Models"
             x:Class="WorkoutTracker.Views.WorkoutPageView"
             x:DataType="vm:WorkoutViewModel"
             xmlns:converters="clr-namespace:WorkoutTracker.Converters"
             Title="Тренировки">

    <ContentPage.Resources>
        <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />

        <DataTemplate x:Key="ExerciseItemTemplate" x:DataType="models:Exercise">
            <Frame Style="{StaticResource FrameListItem}">
                <Grid ColumnDefinitions="*, Auto">
                    <VerticalStackLayout Grid.Column="0" 
                                         Spacing="{StaticResource SpacingXSmall}">
                        <Label Text="{Binding Name}" 
                               Style="{StaticResource LabelBody}"
                               FontAttributes="Bold"/>
                        <Label Text="{Binding WorkTimeSeconds, StringFormat='Работа: {0}с'}" 
                               Style="{StaticResource LabelSubtle}"/>
                        <Label Text="{Binding RestTimeSeconds, StringFormat='Отдых: {0}с'}" 
                               Style="{StaticResource LabelSubtle}"/>
                    </VerticalStackLayout>
                    <Button Grid.Column="1"
                            ImageSource="edit.png"
                            WidthRequest="50"
                            HeightRequest="50"
                            BackgroundColor="{StaticResource TransparentColor}"
                            BorderColor="{StaticResource TransparentColor}"
                            Padding="10,0"
                            Clicked="OnEditExerciseClicked"
                            CommandParameter="{Binding Id}"/>
                </Grid>
            </Frame>
        </DataTemplate>

        <DataTemplate x:Key="ProgramItemTemplate" x:DataType="models:Program">
            <Frame Style="{StaticResource FrameListItem}">
                <Grid ColumnDefinitions="*, Auto, Auto">
                    <VerticalStackLayout Grid.Column="0" 
                                         Spacing="{StaticResource SpacingXSmall}">
                        <Label Text="{Binding Name}" 
                               Style="{StaticResource LabelBody}"
                               FontAttributes="Bold"/>
                        <Label Text="{Binding Exercises.Count, StringFormat='Упражнений: {0}'}" 
                               Style="{StaticResource LabelSubtle}"/>
                    </VerticalStackLayout>
                    <Button Grid.Column="1"
                            ImageSource="play.png"
                            WidthRequest="50"
                            HeightRequest="50"
                            BackgroundColor="{StaticResource TransparentColor}"
                            BorderColor="{StaticResource TransparentColor}"
                            Padding="10,0"
                            Clicked="OnStartProgramClicked"
                            CommandParameter="{Binding Id}"/>
                    <Button Grid.Column="2"
                            ImageSource="edit.png"
                            WidthRequest="50"
                            HeightRequest="50"
                            BackgroundColor="{StaticResource TransparentColor}"
                            BorderColor="{StaticResource TransparentColor}"
                            Padding="10,0"
                            Clicked="OnEditProgramClicked"
                            CommandParameter="{Binding Id}"/>
                </Grid>
            </Frame>
        </DataTemplate>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto, *">
        
        <Grid Grid.Row="0" 
              ColumnDefinitions="*,*" 
              ColumnSpacing="0" 
              HeightRequest="50" 
              BackgroundColor="{StaticResource BackgroundTertiary}">
            
            <VerticalStackLayout Grid.Column="0" Padding="0,10">
                
                <VerticalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding SwitchToExercisesCommand}"/>
                </VerticalStackLayout.GestureRecognizers>
                
                <HorizontalStackLayout Spacing="{StaticResource SpacingXSmall}" HorizontalOptions="Center">
                    <Image Source="dumbbell.png" HeightRequest="30" WidthRequest="30"/>
                    <Label Text="Упражнения" Style="{StaticResource LabelBody}" VerticalOptions="Center"/>
                </HorizontalStackLayout>
                <BoxView Color="{StaticResource AccentPrimary}"
                         HeightRequest="2"
                         Margin="0,8,0,0"
                         WidthRequest="50"
                         IsVisible="{Binding IsExercisesTabVisible}"/>
                
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1" Padding="0,10">
                
                <VerticalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding SwitchToProgramsCommand}"/>
                </VerticalStackLayout.GestureRecognizers>
                
                <HorizontalStackLayout Spacing="{StaticResource SpacingXSmall}" HorizontalOptions="Center">
                    <Image Source="training.png" HeightRequest="30" WidthRequest="30"/>
                    <Label Text="Программы" Style="{StaticResource LabelBody}" VerticalOptions="Center"/>
                </HorizontalStackLayout>
                <BoxView Color="{StaticResource AccentPrimary}"
                         HeightRequest="2"
                         Margin="0,8,0,0"
                         WidthRequest="50"
                         IsVisible="{Binding IsProgramsTabVisible}"/>
            </VerticalStackLayout>
        </Grid>

        <Grid Grid.Row="1" Padding="{StaticResource SpacingLarge}">
            
            <Grid IsVisible="{Binding IsExercisesTabVisible}">
                
                <VerticalStackLayout VerticalOptions="Center"
                                     HorizontalOptions="Center"
                                     Spacing="{StaticResource SpacingSmall}"
                                     IsVisible="{Binding HasExercises, Converter={StaticResource InvertedBoolConverter}}">
                    <Label Text="Нет упражнений"
                           Style="{StaticResource LabelBody}"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                    <Label Text="Ваши упражнения появятся здесь."
                           Style="{StaticResource LabelCaption}"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>

                <CollectionView ItemsSource="{Binding Exercises}"
                                ItemTemplate="{StaticResource ExerciseItemTemplate}"
                                IsVisible="{Binding HasExercises}"
                                SelectionMode="None"/>
            </Grid>

            <Grid IsVisible="{Binding IsProgramsTabVisible}">
                
                <VerticalStackLayout VerticalOptions="Center" 
                                     HorizontalOptions="Center" 
                                     Spacing="{StaticResource SpacingSmall}"
                                     IsVisible="{Binding HasPrograms, Converter={StaticResource InvertedBoolConverter}}">
                    <Label Text="Нет программ" 
                           Style="{StaticResource LabelBody}"
                           FontAttributes="Bold" 
                           HorizontalOptions="Center"/>
                    <Label Text="Ваши программы появятся здесь." 
                           Style="{StaticResource LabelCaption}"
                           HorizontalOptions="Center" 
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>

                <CollectionView ItemsSource="{Binding Programs}"
                                ItemTemplate="{StaticResource ProgramItemTemplate}"
                                IsVisible="{Binding HasPrograms}"
                                SelectionMode="None"/>
            </Grid>

            <Button Text="+"
                    Style="{StaticResource ButtonFab}"
                    VerticalOptions="End"
                    HorizontalOptions="End"
                    Margin="0,0,10,10"
                    Command="{Binding CreateWorkoutCommand}"/>
        </Grid>
    </Grid>
</ContentPage>