<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WorkoutTracker.ViewModels"
             xmlns:models="clr-namespace:WorkoutTracker.Models"
             xmlns:converters="clr-namespace:WorkoutTracker.Converters"
             x:Class="WorkoutTracker.Views.StatsPageView"
             x:DataType="vm:StatsViewModel"
             Title="Статистика"
             BackgroundColor="#121212">

    <ContentPage.Resources>
        <converters:IsNotNullConverter x:Key="IsNotNullConverter" />
        
        <DataTemplate x:Key="WorkoutItemTemplate" x:DataType="models:WorkoutHistory">
            <Frame BackgroundColor="#2C2C2C"
                   CornerRadius="10"
                   Padding="15"
                   Margin="0,5,0,5"
                   HasShadow="False">
                <VerticalStackLayout Spacing="5">
                    <Label Text="{Binding WorkoutName}" 
                           TextColor="White" 
                           FontSize="16" 
                           FontAttributes="Bold"/>
                    <Label Text="{Binding WorkoutDetails}" 
                           TextColor="LightGray" 
                           FontSize="12"/>
                    <Label Text="{Binding WorkoutDate, StringFormat='{0:HH:mm}'}" 
                           TextColor="#00BFFF" 
                           FontSize="12"/>
                </VerticalStackLayout>
            </Frame>
        </DataTemplate>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto, *, Auto">
        <!-- Header with month navigation -->
        <Grid Grid.Row="0" 
              BackgroundColor="#222222" 
              Padding="15,10"
              ColumnDefinitions="Auto, *, Auto">
            <Button Grid.Column="0"
                    Text="◀"
                    FontSize="20"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    Command="{Binding PreviousMonthCommand}"
                    WidthRequest="40"
                    HeightRequest="40"/>
            
            <Label Grid.Column="1"
                   Text="{Binding CurrentMonthName}"
                   TextColor="White"
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
            
            <Button Grid.Column="2"
                    Text="▶"
                    FontSize="20"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    Command="{Binding NextMonthCommand}"
                    WidthRequest="40"
                    HeightRequest="40"/>
        </Grid>

        <!-- Calendar -->
        <ScrollView Grid.Row="1" Padding="15">
            <VerticalStackLayout Spacing="10">
                <!-- Days of week header -->
                <Grid ColumnDefinitions="*,*,*,*,*,*,*" ColumnSpacing="5">
                    <Label Grid.Column="0" Text="ПН" TextColor="LightGray" FontSize="12" HorizontalOptions="Center"/>
                    <Label Grid.Column="1" Text="ВТ" TextColor="LightGray" FontSize="12" HorizontalOptions="Center"/>
                    <Label Grid.Column="2" Text="СР" TextColor="LightGray" FontSize="12" HorizontalOptions="Center"/>
                    <Label Grid.Column="3" Text="ЧТ" TextColor="LightGray" FontSize="12" HorizontalOptions="Center"/>
                    <Label Grid.Column="4" Text="ПТ" TextColor="LightGray" FontSize="12" HorizontalOptions="Center"/>
                    <Label Grid.Column="5" Text="СБ" TextColor="LightGray" FontSize="12" HorizontalOptions="Center"/>
                    <Label Grid.Column="6" Text="ВС" TextColor="LightGray" FontSize="12" HorizontalOptions="Center"/>
                </Grid>

                <!-- Calendar grid -->
                <Grid x:Name="CalendarGrid" 
                      ColumnDefinitions="*,*,*,*,*,*,*" 
                      RowDefinitions="*,*,*,*,*,*"
                      ColumnSpacing="5"
                      RowSpacing="5">
                    <!-- Calendar cells will be generated in code-behind -->
                </Grid>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Workouts list for selected date -->
        <Grid Grid.Row="2" 
              RowDefinitions="Auto, *"
              BackgroundColor="#222222"
              IsVisible="{Binding SelectedDate, Converter={StaticResource IsNotNullConverter}}"
              MaximumHeightRequest="250">
            <Label Grid.Row="0"
                   Text="{Binding SelectedDate, StringFormat='Тренировки за {0:dd MMMM yyyy}'}"
                   TextColor="White"
                   FontSize="16"
                   FontAttributes="Bold"
                   Padding="15,10"
                   HorizontalOptions="Center"/>
            
            <CollectionView Grid.Row="1"
                           ItemsSource="{Binding WorkoutsForSelectedDate}"
                           ItemTemplate="{StaticResource WorkoutItemTemplate}"
                           SelectionMode="None"
                           MaximumHeightRequest="200"
                           BackgroundColor="Transparent">
                <CollectionView.EmptyView>
                    <Label Text="Нет тренировок в этот день"
                           TextColor="LightGray"
                           FontSize="14"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Margin="0,20"/>
                </CollectionView.EmptyView>
            </CollectionView>
        </Grid>
    </Grid>
</ContentPage>

