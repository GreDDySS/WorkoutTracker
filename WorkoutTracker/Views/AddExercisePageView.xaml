<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutTracker.Views.AddExercisePageView"
             Title="Добавить упражнение"
             BackgroundColor="#121212">
    <ContentPage.Resources>
        <Style x:Key="TimeButton" TargetType="Button">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="HeightRequest" Value="40" />
            <Setter Property="WidthRequest" Value="40" />
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="BorderColor" Value="Transparent" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="VerticalOptions" Value="Center" />
        </Style>

        <Style x:Key="TimeLabel" TargetType="Label">
            <Setter Property="FontSize" Value="56" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="VerticalOptions" Value="Center" />
            <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
        </Style>

        <Style x:Key="SectionHeader" TargetType="Label">
            <Setter Property="TextColor" Value="LightGray" />
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="FontSize" Value="14" />
            <Setter Property="HorizontalOptions" Value="Center" />
            <Setter Property="Margin" Value="0, 10, 0, 5" />
        </Style>

        <Style x:Key="DarkFrame" TargetType="Frame">
            <Setter Property="BackgroundColor" Value="#2C2C2C" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="15" />
            <Setter Property="Margin" Value="0, 10" />
            <Setter Property="HasShadow" Value="False" />
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="*, Auto">
        <VerticalStackLayout Grid.Row="0" Spacing="0" Padding="15">
            <Label Text="Добавить упражнение" HorizontalOptions="Center" FontSize="24" FontAttributes="Bold" TextColor="Gray"/>
            <Frame Style="{StaticResource DarkFrame}">
                <VerticalStackLayout Spacing="5">
                    <Label Text="ПОДХОДЫ" Style="{StaticResource SectionHeader}"/>
                    <Grid ColumnDefinitions="Auto, *, Auto" Margin="50, 0">
                        <Button Grid.Column="0" Text="—" Style="{StaticResource TimeButton}" />
                        <Label Grid.Column="1" Text="1" TextColor="White" Style="{StaticResource TimeLabel}" FontSize="48" />
                        <Button Grid.Column="2" Text="+" Style="{StaticResource TimeButton}" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <Frame Style="{StaticResource DarkFrame}" Padding="5">
                <VerticalStackLayout>
                    <Entry Placeholder="Название упражнения"
                           PlaceholderColor="Gray"
                           TextColor="White"
                           FontSize="18"
                           HeightRequest="50"
                           Background="Transparent"
                           HorizontalTextAlignment="Center"/>
                    <Grid ColumnDefinitions="Auto, *, Auto" Margin="50, 0">
                        <Button Grid.Column="0" Text="—" Style="{StaticResource TimeButton}" />
                        <Label Grid.Column="1" Text="00:10" TextColor="White" Style="{StaticResource TimeLabel}" FontSize="48" />
                        <Button Grid.Column="2" Text="+" Style="{StaticResource TimeButton}" />
                    </Grid>
                    <BoxView HeightRequest="2" Color="Gray" Margin="0,10"/>
                    <Grid RowDefinitions="Auto, Auto">
                        <Label Grid.Row="0" Text="ОТДЫХ" Style="{StaticResource SectionHeader}" TextColor="#00BFFF"/>
                        <Grid Grid.Row="1" ColumnDefinitions="Auto, *, Auto" Margin="50, 0">
                            <Button Grid.Column="0" Text="—" Style="{StaticResource TimeButton}" />
                            <Label Grid.Column="1" Text="00:10" TextColor="White" Style="{StaticResource TimeLabel}" FontSize="48" />
                            <Button Grid.Column="2" Text="+" Style="{StaticResource TimeButton}" />
                        </Grid>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
        <Button Grid.Row="1" Background="White" Text="Сохранить" TextColor="Black" FontAttributes="Bold" FontSize="32" Margin="10" Command="{Binding SaveExerciseCommand}"/>
        
    </Grid>
</ContentPage>