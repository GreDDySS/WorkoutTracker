<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WorkoutTracker.ViewModels"
             x:Class="WorkoutTracker.Views.MainPageView"
             x:DataType="vm:MainViewModel"
             Title="Tracker"
             BackgroundColor="{StaticResource BackgroundPrimary}">
    <Grid RowDefinitions="Auto, *, Auto" Padding="20,10">

        <Label Grid.Row="0" 
               Text="WorkoutTraker" 
               Style="{StaticResource LabelTitle}" 
               FontSize="32"
               Margin="0,00,0,20"/>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="20">

                <Border Style="{StaticResource CardStyle}">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="ПОДХОДЫ" Style="{StaticResource LabelCaption}" HorizontalOptions="Center"/>
                        <Border Style="{StaticResource CounterContainer}" HeightRequest="70">
                            <Grid ColumnDefinitions="Auto, *, Auto">
                                <Button Grid.Column="0" Text="-" Style="{StaticResource ButtonCounter}" Command="{Binding ChangeApproachesCommand}" CommandParameter="-"/>
                                <Label Grid.Column="1" Text="{Binding Approaches}" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
                                <Button Grid.Column="2" Text="+" Style="{StaticResource ButtonCounter}" Command="{Binding ChangeApproachesCommand}" CommandParameter="+"/>
                            </Grid>
                        </Border>
                    </VerticalStackLayout>
                </Border>

                <Border Style="{StaticResource CardStyle}">
                    <Grid RowDefinitions="*, Auto, *" ColumnDefinitions="*">

                        <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="0,10">
                            <Label Text="РАБОТА" TextColor="{StaticResource AccentWork}" FontAttributes="Bold" HorizontalOptions="Center"/>
                            <Border Style="{StaticResource CounterContainer}" HeightRequest="70">
                                <Grid ColumnDefinitions="35, *, 35">
                                    <Button Grid.Column="0" Text="-" Style="{StaticResource ButtonCounter}" Command="{Binding ChangeWorkTimeCommand}" CommandParameter="-"/>
                                    <Label Grid.Column="1" Text="{Binding WorkTimeDisplay}" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
                                    <Button Grid.Column="2" Text="+" Style="{StaticResource ButtonCounter}" Command="{Binding ChangeWorkTimeCommand}" CommandParameter="+"/>
                                </Grid>
                            </Border>
                        </VerticalStackLayout>

                        <BoxView Grid.Row="1" HeightRequest="1" Color="{StaticResource BackgroundInput}" Margin="10" HorizontalOptions="Fill"/>

                        <VerticalStackLayout Grid.Row="2" Spacing="10" Margin="0,10">
                            <Label Text="ОТДЫХ" TextColor="{StaticResource AccentRest}" FontAttributes="Bold" HorizontalOptions="Center"/>
                            <Border Style="{StaticResource CounterContainer}" HeightRequest="70">
                                <Grid ColumnDefinitions="35, *, 35">
                                    <Button Grid.Column="0" Text="-" Style="{StaticResource ButtonCounter}" Command="{Binding ChangeRestTimeCommand}" CommandParameter="-"/>
                                    <Label Grid.Column="1" Text="{Binding RestTimeDisplay}" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
                                    <Button Grid.Column="2" Text="+" Style="{StaticResource ButtonCounter}" Command="{Binding ChangeRestTimeCommand}" CommandParameter="+"/>
                                </Grid>
                            </Border>
                        </VerticalStackLayout>
                    </Grid>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <Button Grid.Row="2" 
                Text="НАЧАТЬ" 
                Style="{StaticResource ButtonPrimary}"
                Command="{Binding StartWorkoutCommand}"
                Margin="0,20,0,20"/>
    </Grid>
</ContentPage>