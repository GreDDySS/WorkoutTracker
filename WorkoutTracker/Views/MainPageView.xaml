<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutTracker.Views.MainPageView">

    <VerticalStackLayout Padding="20">
        <Label Text="Список таймеров" FontAttributes="Bold" FontSize="20"/>
        <CollectionView ItemsSource="{Binding Timers}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BorderColor="Gray">
                        <VerticalStackLayout>
                            <Label Text="Отжимария" FontSize="10"/>
                            <Label Text="Подходы"/>
                            <Label Text="Работа: "/>
                            <Label Text="Отдых: "/>
                            <Button Text="Старт"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Добавить таймер" Margin="0, 10"/>
        <Label Text="Осталось 20 сек" FontSize="24" HorizontalOptions="Center"/>
        <Button Text="Остановить"/>
    </VerticalStackLayout>

</ContentPage>
