<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WorkoutTracker.ViewModels"
             x:Class="WorkoutTracker.Views.SettingsPageView"
             x:DataType="vm:SettingsViewModel"
             Title="Настройки">

    <ScrollView>
        <VerticalStackLayout Padding="{StaticResource SpacingMedium},10" 
                             Spacing="{StaticResource SpacingMedium}">

            <Label Text="Настройки таймера и тренировок"
                   Style="{StaticResource LabelHeading}"
                   Margin="0,10,0,20"/>

            <Label Text="ЗНАЧЕНИЯ ПО УМОЛЧАНИЮ"
                   Style="{StaticResource LabelSectionHeader}"/>

            <Frame Style="{StaticResource FrameCard}">
                <VerticalStackLayout>
                    <Label Text="Подходы по умолчанию"
                           Style="{StaticResource LabelCaption}"
                           HorizontalOptions="Center"/>
                    <Grid ColumnDefinitions="Auto, *, Auto" 
                          Margin="50,5,50,0">
                        <Button Grid.Column="0"
                                Text="—"
                                Style="{StaticResource ButtonCounter}"
                                Command="{Binding ChangeApproachesCommand}"
                                CommandParameter="-"/>
                        <Label Grid.Column="1"
                               Text="{Binding DefaultApproaches}"
                               Style="{StaticResource LabelTitle}"/>
                        <Button Grid.Column="2"
                                Text="+"
                                Style="{StaticResource ButtonCounter}"
                                Command="{Binding ChangeApproachesCommand}"
                                CommandParameter="+"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <Frame Style="{StaticResource FrameCard}">
                <VerticalStackLayout>
                    <Label Text="Время работы по умолчанию"
                           TextColor="{StaticResource AccentWork}"
                           FontSize="{StaticResource FontSizeSmall}"
                           HorizontalOptions="Center"/>
                    <Grid ColumnDefinitions="Auto, *, Auto" 
                          Margin="50,5,50,0">
                        <Button Grid.Column="0"
                                Text="—"
                                Style="{StaticResource ButtonCounter}"
                                Command="{Binding ChangeWorkTimeCommand}"
                                CommandParameter="-"/>
                        <Label Grid.Column="1"
                               Text="{Binding WorkTimeDisplay}"
                               TextColor="{StaticResource AccentWork}"
                               Style="{StaticResource LabelTitle}"/>
                        <Button Grid.Column="2"
                                Text="+"
                                Style="{StaticResource ButtonCounter}"
                                Command="{Binding ChangeWorkTimeCommand}"
                                CommandParameter="+"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <Frame Style="{StaticResource FrameCard}">
                <VerticalStackLayout>
                    <Label Text="Время отдыха по умолчанию"
                           TextColor="{StaticResource AccentRest}"
                           FontSize="{StaticResource FontSizeSmall}"
                           HorizontalOptions="Center"/>
                    <Grid ColumnDefinitions="Auto, *, Auto" 
                          Margin="50,5,50,0">
                        <Button Grid.Column="0"
                                Text="—"
                                Style="{StaticResource ButtonCounter}"
                                Command="{Binding ChangeRestTimeCommand}"
                                CommandParameter="-"/>
                        <Label Grid.Column="1"
                               Text="{Binding RestTimeDisplay}"
                               TextColor="{StaticResource AccentRest}"
                               Style="{StaticResource LabelTitle}"/>
                        <Button Grid.Column="2"
                                Text="+"
                                Style="{StaticResource ButtonCounter}"
                                Command="{Binding ChangeRestTimeCommand}"
                                CommandParameter="+"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <Label Text="ПОВЕДЕНИЕ ТАЙМЕРА"
                   Style="{StaticResource LabelSectionHeader}"/>

            <Frame Style="{StaticResource FrameCard}">
                <Grid ColumnDefinitions="*, Auto">
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="Автозапуск следующего упражнения"
                               Style="{StaticResource LabelBody}"/>
                        <Label Text="Автоматически начинать следующее упражнение после завершения текущего"
                               Style="{StaticResource LabelSubtle}"
                               Margin="0,5,0,0"/>
                    </VerticalStackLayout>
                    <Switch Grid.Column="1"
                            IsToggled="{Binding AutoStartNextExercise}"
                            VerticalOptions="Center"/>
                </Grid>
            </Frame>

            <Frame Style="{StaticResource FrameCard}">
                <VerticalStackLayout>
                    <Grid ColumnDefinitions="*, Auto" 
                          Margin="0,0,0,10">
                        <Label Grid.Column="0"
                               Text="Предупреждение об окончании"
                               Style="{StaticResource LabelBody}"
                               VerticalOptions="Center"/>
                        <Label Grid.Column="1"
                               Text="{Binding CountdownWarningSeconds, StringFormat='{0} сек'}"
                               Style="{StaticResource LabelBody}"
                               FontAttributes="Bold"
                               VerticalOptions="Center"/>
                    </Grid>
                    <Label Text="Предупреждать за несколько секунд до конца фазы"
                           Style="{StaticResource LabelSubtle}"
                           Margin="0,0,0,10"/>
                    <Grid ColumnDefinitions="Auto, *, Auto">
                        <Button Grid.Column="0"
                                Text="—"
                                Style="{StaticResource ButtonCounter}"
                                Command="{Binding ChangeWarningCommand}"
                                CommandParameter="-"/>
                        <Slider Grid.Column="1"
                                Minimum="0"
                                Maximum="10"
                                Value="{Binding CountdownWarningSeconds}"
                                VerticalOptions="Center"
                                Margin="10,0"/>
                        <Button Grid.Column="2"
                                Text="+"
                                Style="{StaticResource ButtonCounter}"
                                Command="{Binding ChangeWarningCommand}"
                                CommandParameter="+"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <Label Text="УВЕДОМЛЕНИЯ"
                   Style="{StaticResource LabelSectionHeader}"/>

            <Frame Style="{StaticResource FrameCard}">
                <Grid ColumnDefinitions="*, Auto">
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="Звуковые сигналы"
                               Style="{StaticResource LabelBody}"/>
                        <Label Text="Воспроизводить звук при смене фаз"
                               Style="{StaticResource LabelSubtle}"
                               Margin="0,5,0,0"/>
                    </VerticalStackLayout>
                    <Switch Grid.Column="1"
                            IsToggled="{Binding SoundEnabled}"
                            VerticalOptions="Center"/>
                </Grid>
            </Frame>

            <Frame Style="{StaticResource FrameCard}" 
                   Margin="0,0,0,20">
                <Grid ColumnDefinitions="*, Auto">
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="Вибрация"
                               Style="{StaticResource LabelBody}"/>
                        <Label Text="Вибрировать при смене фаз работы и отдыха"
                               Style="{StaticResource LabelSubtle}"
                               Margin="0,5,0,0"/>
                    </VerticalStackLayout>
                    <Switch Grid.Column="1"
                            IsToggled="{Binding VibrationEnabled}"
                            VerticalOptions="Center"/>
                </Grid>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>