<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WorkoutTracker.ViewModels"
             x:Class="WorkoutTracker.Views.SettingsPageView"
             x:DataType="vm:SettingsViewModel"
             Title="Настройки">
    
    <ContentPage.Resources>
        <Style x:Key="TimeButton" TargetType="Button">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="HeightRequest" Value="40" />
            <Setter Property="WidthRequest" Value="40" />
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="BorderColor" Value="Transparent" />
            <Setter Property="BorderWidth" Value="0" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="VerticalOptions" Value="Center" />
        </Style>

        <Style x:Key="TimeLabel" TargetType="Label">
            <Setter Property="FontSize" Value="48" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="VerticalOptions" Value="Center" />
            <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
        </Style>
    </ContentPage.Resources>

    <ScrollView BackgroundColor="#121212">
        <VerticalStackLayout Padding="15,10" Spacing="15">
            
            <!-- Header -->
            <Label Text="Настройки таймера и тренировок"
                   TextColor="White"
                   FontSize="20"
                   FontAttributes="Bold"
                   Margin="0,10,0,20"/>

            <!-- Default Values Section -->
            <Label Text="ЗНАЧЕНИЯ ПО УМОЛЧАНИЮ"
                   TextColor="LightGray"
                   FontSize="14"
                   FontAttributes="Bold"
                   Margin="0,10,0,5"/>

            <!-- Default Approaches -->
            <Frame Padding="15" BackgroundColor="#222222" CornerRadius="10">
                <VerticalStackLayout>
                    <Label Text="Подходы по умолчанию"
                           TextColor="LightGray"
                           FontSize="14"
                           HorizontalOptions="Center"/>
                    <Grid ColumnDefinitions="Auto, *, Auto" Margin="50,5,50,0">
                        <Button Grid.Column="0"
                                Text="—"
                                Style="{StaticResource TimeButton}"
                                Command="{Binding ChangeApproachesCommand}"
                                CommandParameter="-"/>
                        <Label Grid.Column="1"
                               Text="{Binding DefaultApproaches}"
                               TextColor="White"
                               Style="{StaticResource TimeLabel}"/>
                        <Button Grid.Column="2"
                                Text="+"
                                Style="{StaticResource TimeButton}"
                                Command="{Binding ChangeApproachesCommand}"
                                CommandParameter="+"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Default Work Time -->
            <Frame Padding="15" BackgroundColor="#222222" CornerRadius="10">
                <VerticalStackLayout>
                    <Label Text="Время работы по умолчанию"
                           TextColor="#00FF00"
                           FontSize="14"
                           HorizontalOptions="Center"/>
                    <Grid ColumnDefinitions="Auto, *, Auto" Margin="50,5,50,0">
                        <Button Grid.Column="0"
                                Text="—"
                                Style="{StaticResource TimeButton}"
                                Command="{Binding ChangeWorkTimeCommand}"
                                CommandParameter="-"/>
                        <Label Grid.Column="1"
                               Text="{Binding WorkTimeDisplay}"
                               TextColor="#00FF00"
                               Style="{StaticResource TimeLabel}"/>
                        <Button Grid.Column="2"
                                Text="+"
                                Style="{StaticResource TimeButton}"
                                Command="{Binding ChangeWorkTimeCommand}"
                                CommandParameter="+"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Default Rest Time -->
            <Frame Padding="15" BackgroundColor="#222222" CornerRadius="10">
                <VerticalStackLayout>
                    <Label Text="Время отдыха по умолчанию"
                           TextColor="#00BFFF"
                           FontSize="14"
                           HorizontalOptions="Center"/>
                    <Grid ColumnDefinitions="Auto, *, Auto" Margin="50,5,50,0">
                        <Button Grid.Column="0"
                                Text="—"
                                Style="{StaticResource TimeButton}"
                                Command="{Binding ChangeRestTimeCommand}"
                                CommandParameter="-"/>
                        <Label Grid.Column="1"
                               Text="{Binding RestTimeDisplay}"
                               TextColor="#00BFFF"
                               Style="{StaticResource TimeLabel}"/>
                        <Button Grid.Column="2"
                                Text="+"
                                Style="{StaticResource TimeButton}"
                                Command="{Binding ChangeRestTimeCommand}"
                                CommandParameter="+"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Timer Behavior Section -->
            <Label Text="ПОВЕДЕНИЕ ТАЙМЕРА"
                   TextColor="LightGray"
                   FontSize="14"
                   FontAttributes="Bold"
                   Margin="0,20,0,5"/>

            <!-- Auto Start Next Exercise -->
            <Frame Padding="15" BackgroundColor="#222222" CornerRadius="10">
                <Grid ColumnDefinitions="*, Auto">
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="Автозапуск следующего упражнения"
                               TextColor="White"
                               FontSize="16"/>
                        <Label Text="Автоматически начинать следующее упражнение после завершения текущего"
                               TextColor="Gray"
                               FontSize="12"
                               Margin="0,5,0,0"/>
                    </VerticalStackLayout>
                    <Switch Grid.Column="1"
                            IsToggled="{Binding AutoStartNextExercise}"
                            VerticalOptions="Center"
                            OnColor="#4CAF50"/>
                </Grid>
            </Frame>

            <!-- Countdown Warning -->
            <Frame Padding="15" BackgroundColor="#222222" CornerRadius="10">
                <VerticalStackLayout>
                    <Grid ColumnDefinitions="*, Auto" Margin="0,0,0,10">
                        <Label Grid.Column="0"
                               Text="Предупреждение об окончании"
                               TextColor="White"
                               FontSize="16"
                               VerticalOptions="Center"/>
                        <Label Grid.Column="1"
                               Text="{Binding CountdownWarningSeconds, StringFormat='{0} сек'}"
                               TextColor="White"
                               FontSize="16"
                               FontAttributes="Bold"
                               VerticalOptions="Center"/>
                    </Grid>
                    <Label Text="Предупреждать за несколько секунд до конца фазы"
                           TextColor="Gray"
                           FontSize="12"
                           Margin="0,0,0,10"/>
                    <Grid ColumnDefinitions="Auto, *, Auto">
                        <Button Grid.Column="0"
                                Text="—"
                                Style="{StaticResource TimeButton}"
                                Command="{Binding ChangeWarningCommand}"
                                CommandParameter="-"/>
                        <Slider Grid.Column="1"
                                Minimum="0"
                                Maximum="10"
                                Value="{Binding CountdownWarningSeconds}"
                                MinimumTrackColor="#4CAF50"
                                MaximumTrackColor="#555555"
                                ThumbColor="#4CAF50"
                                VerticalOptions="Center"
                                Margin="10,0"/>
                        <Button Grid.Column="2"
                                Text="+"
                                Style="{StaticResource TimeButton}"
                                Command="{Binding ChangeWarningCommand}"
                                CommandParameter="+"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Notifications Section -->
            <Label Text="УВЕДОМЛЕНИЯ"
                   TextColor="LightGray"
                   FontSize="14"
                   FontAttributes="Bold"
                   Margin="0,20,0,5"/>

            <!-- Sound Enabled -->
            <Frame Padding="15" BackgroundColor="#222222" CornerRadius="10">
                <Grid ColumnDefinitions="*, Auto">
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="Звуковые сигналы"
                               TextColor="White"
                               FontSize="16"/>
                        <Label Text="Воспроизводить звук при смене фаз"
                               TextColor="Gray"
                               FontSize="12"
                               Margin="0,5,0,0"/>
                    </VerticalStackLayout>
                    <Switch Grid.Column="1"
                            IsToggled="{Binding SoundEnabled}"
                            VerticalOptions="Center"
                            OnColor="#4CAF50"/>
                </Grid>
            </Frame>

            <!-- Vibration Enabled -->
            <Frame Padding="15" BackgroundColor="#222222" CornerRadius="10" Margin="0,0,0,20">
                <Grid ColumnDefinitions="*, Auto">
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="Вибрация"
                               TextColor="White"
                               FontSize="16"/>
                        <Label Text="Вибрировать при смене фаз работы и отдыха"
                               TextColor="Gray"
                               FontSize="12"
                               Margin="0,5,0,0"/>
                    </VerticalStackLayout>
                    <Switch Grid.Column="1"
                            IsToggled="{Binding VibrationEnabled}"
                            VerticalOptions="Center"
                            OnColor="#4CAF50"/>
                </Grid>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
