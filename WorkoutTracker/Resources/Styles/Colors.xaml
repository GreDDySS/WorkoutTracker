<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="BackgroundPrimary">#0F1115</Color>
    <Color x:Key="BackgroundSecondary">#181A20</Color>
    <Color x:Key="BackgroundCard">#262A34</Color>
    <Color x:Key="BackgroundInput">#2F333E</Color>

    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#9CA3AF</Color>
    <Color x:Key="TextTertiary">#6B7280</Color>

    <Color x:Key="AccentMain">#FCA311</Color>
    <Color x:Key="AccentWork">#FF6B6B</Color>
    <Color x:Key="AccentRest">#4ECDC4</Color>
    <Color x:Key="AccentError">#EF476F</Color>

    <LinearGradientBrush x:Key="GradientMain" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FCA311" Offset="0.0" />
        <GradientStop Color="#FFB703" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GradientWork" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF6B6B" Offset="0.0" />
        <GradientStop Color="#EE5253" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GradientRest" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#4ECDC4" Offset="0.0" />
        <GradientStop Color="#26A69A" Offset="1.0" />
    </LinearGradientBrush>

    <Color x:Key="TransparentColor">Transparent</Color>
    <Color x:Key="BackgroundElevated">#323642</Color>

    <Style x:Key="ButtonPrimary" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource GradientMain}"/>
        <Setter Property="TextColor" Value="#0F1115"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="HeightRequest" Value="56"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource AccentMain}" Offset="0,4" Radius="10" Opacity="0.3"/>
        </Setter>
    </Style>

    <Style x:Key="ButtonSecondary" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundInput}"/>
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="HeightRequest" Value="50"/>
        <Setter Property="FontAttributes" Value="Bold"/>
    </Style>

    <Style x:Key="ButtonCounter" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundInput}"/>
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
        <Setter Property="WidthRequest" Value="44"/>
        <Setter Property="HeightRequest" Value="44"/>
        <Setter Property="CornerRadius" Value="14"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <Style x:Key="ButtonClose" TargetType="Button">
        <Setter Property="Text" Value="✕"/>
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundInput}"/>
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="WidthRequest" Value="40"/>
        <Setter Property="HeightRequest" Value="40"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundCard}"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 24"/>
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Shadow">
            <Shadow Brush="Black" Offset="0,2" Radius="5" Opacity="0.2"/>
        </Setter>
    </Style>

    <Style x:Key="CounterContainer" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundSecondary}"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 18"/>
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="Padding" Value="5"/>
    </Style>

    <Style x:Key="LabelHero" TargetType="Label">
        <Setter Property="FontSize" Value="48"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
    </Style>

    <Style x:Key="LabelTitle" TargetType="Label">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
    </Style>

    <Style x:Key="LabelBody" TargetType="Label">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
    </Style>

    <Style x:Key="LabelCaption" TargetType="Label">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="CharacterSpacing" Value="1"/>
    </Style>

    <Style x:Key="EntryDefault" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
        <Setter Property="PlaceholderColor" Value="{StaticResource TextTertiary}"/>
    </Style>

</ResourceDictionary>